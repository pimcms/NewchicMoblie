extends layout

block layouts
	.container.pinfo_container
		.header_wrap
			.header
				span.i_head.icon_back.i_head_1
				h3.i_head_title Profile
				span.btn_head_right Edit		
		.main.newadd_main
			ul.list_group
				li.list_group_item 
					strong Change Your Photo
					span.user_photo.img_circle
						img.img_responsive.img_circle(src="images/photo.jpg")
					span.icon_sm.icon_sm_arr_r
				- var items={"f_name":"First Name","l_name":"Last Name","n_name":"Nickname","phone":"Telephone","f_number":"Fax Number"}
				- each item,key in items
					li.list_group_item
						label.form_label(for="#{key}") #{item}
						input.input_hideform.input_side(type="text" placeholder="#{item}" id="#{key}")
	include include/scripts